{{ 'my-general-style.css' | asset_url | stylesheet_tag }}
{{ 'myherobanner.css' | asset_url | stylesheet_tag }}
<!-- Hero Section -->
<div class="general myherobanner">
  <div class="" style="background-image: url({{ section.settings.background_image | img_url: 'master' }})">
    <div class="gift-guide">
      <div class="gift-guide__column">
        <h1 class="gift-guide__title">{{ section.settings.thegiftguide }}</h1>
        <p class="gift-guide__description">{{ section.settings.description }}</p>

        {% if section.settings.button_link != blank %}
          <a
            href="{{ section.settings.button_link }}"
            class="gift-guide__button flex-row-center-center"
            aria-label="{{ section.settings.button_text }}"
            style="text-decoration: none;">
            <span>{{ section.settings.button_text }}</span>
            <div class="right-icon-wrapper">
              {% render 'img_line_15_white_a700'
                , class: 'line-15' %}
            </div>
          </a>
        {% endif %}
      </div>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "t:sections.myherobanner.name",
    "tag": "section",
    "class": "section",
    "settings": [
      {
        "type": "image_picker",
        "id": "background_image",
        "label": "t:sections.myherobanner.settings.background_image.label"
      },
      {
        "type": "text",
        "id": "thegiftguide",
        "label": "t:sections.myherobanner.settings.thegiftguide.label",
        "default": "The Gift Guide"
      },
      {
        "type": "textarea",
        "id": "description",
        "label": "t:sections.myherobanner.settings.description.label",
        "default": "Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season."
      },
      {
        "type": "text",
        "id": "button_text",
        "label": "t:sections.myherobanner.settings.button_text.label",
        "default": "Shop Now"
      },
      {
        "type": "url",
        "id": "button_link",
        "label": "t:sections.myherobanner.settings.button_link.label"
      }
    ],
    "presets": [
      {
        "name": "t:sections.myherobanner.presets.name"
      }
    ]
  }
{% endschema %}

{% javascript %}
  document.addEventListener('DOMContentLoaded', function() {
    const shopNowButton = document.querySelector('.gift-guide__button');
    if (shopNowButton) {
      shopNowButton.addEventListener('click', function(event) {
        event.preventDefault();
        const url = this.getAttribute('href');
        if (url) {
          window.location.href = url;
        }
      });
    }
  });
{% endjavascript %}